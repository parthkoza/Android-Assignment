<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/layout"
    android:orientation="vertical"
    tools:context=".que_15.RadioButtonBackgroundColorActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3CECE"
        android:padding="10dp"
        android:text="15. Write a program in android display screen \n       color which the Color will be
select from the \n       radio button. "
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg_color">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="White"
            android:textSize="16dp"
            android:id="@+id/rb_white"
            android:onClick="onRadioButtonClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grey"
            android:id="@+id/rb_grey"
            android:textSize="16dp"
            android:onClick="onRadioButtonClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red"
            android:id="@+id/rb_red"
            android:textSize="16dp"
            android:onClick="onRadioButtonClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:id="@+id/rb_blue"
            android:textSize="16dp"
            android:onClick="onRadioButtonClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green"
            android:textSize="16dp"
            android:id="@+id/rb_green"
            android:onClick="onRadioButtonClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orange"
            android:textSize="16dp"
            android:id="@+id/rb_orange"
            android:onClick="onRadioButtonClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:id="@+id/rb_yellow"
            android:textSize="16dp"
            android:onClick="onRadioButtonClick"/>
    </RadioGroup>
</LinearLayout>